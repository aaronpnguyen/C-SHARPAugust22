@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
</head>
<body>
    <form asp-action="Create" asp-controller="Home" method="post">
        <div>
            <div class="validation">
                <span asp-validation-for="FirstName" style="color: red;"></span>
            </div>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName">    
        </div>
        <div>
            <div class="validation">
                <span asp-validation-for="LastName" style="color: red;"></span>
            </div>
            <label asp-for="LastName"></label>
            <input asp-for="LastName">    
        </div>
        <div>
            <div class="validation">
                <span asp-validation-for="Age" style="color: red;"></span>
            </div>
            <label asp-for="Age"></label>
            <input asp-for="Age">    
        </div>
        <div>
            <div class="validation">
                <span asp-validation-for="Email" style="color: red;"></span>
            </div>
            <label asp-for="Email"></label>
            <input asp-for="Email">
        </div>
        <div>
            <div class="validation">
                <span asp-validation-for="Password" style="color: red;"></span>
            </div>
            <label asp-for="Password"></label>
            <input asp-for="Password">
        </div>
        <input value="Add User" type="submit">    
    </form>
</body>
</html>