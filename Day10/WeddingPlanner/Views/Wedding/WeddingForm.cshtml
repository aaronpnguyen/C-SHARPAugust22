@model Wedding
<h1>Wedding Form</h1>

<form asp-controller="Wedding" asp-action="SubmitWedding" method="post">
    <div>
        <div class="validations">
            <label asp-for="PersonOne"></label>
            <span style="color: red;" asp-validation-for="PersonOne"></span>
        </div>
        <input asp-for="PersonOne">
    </div>
    
    <div>
        <div class="validations">
            <label asp-for="PersonTwo"></label>
            <span style="color: red;" asp-validation-for="PersonTwo"></span>
        </div>
        <input asp-for="PersonTwo">
    </div>
    
    <div>
        <div class="validations">
            <label asp-for="Date"></label>
            <span style="color: red;" asp-validation-for="Date"></span>
        </div>
        <input type="Date" asp-for="Date">
    </div>
    
    <div>
        <div class="validations">
            <label asp-for="Address"></label>
            <span style="color: red;" asp-validation-for="Address"></span>
        </div>
        <input type="string" asp-for="Address">
    </div>
    <br>
    <button>Submit</button>
</form>